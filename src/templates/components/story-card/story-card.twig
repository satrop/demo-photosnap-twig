{# 
  StoryCard Component
  @param {string} image - The image URL
  @param {string} date - Optional date of the story
  @param {string} title - The story title
  @param {string} author - The author name
  @param {string} href - The link URL
#}

<article class="story-card">
	<a href="{{ href }}"  aria-labelledby="story-title-{{ title|replace({' ': '-'})|lower }}">
		<div class="story-card__image-container">
			<img src="{{ image }}" alt="" {# Decorative image, content described in title/text #} class="story-card__image" aria-hidden="true"/>
		</div>
		<div class="story-card__content">
			{% if date %}
				<time class="story-card__date">{{ date }}</time>
			{% endif %}
			<h3 id="story-title-{{ title|replace({' ': '-'})|lower }}" class="story-card__title">
				{{ title }}
			</h3>
			<p class="story-card__author">by
				{{ author }}</p>
			<hr class="story-card__divider" aria-hidden="true"/>
			<div class="story-card__cta">
				{% include 'components/button/button.twig' with {
          text: 'Read Story',
          variant: 'secondary',
          ariaLabel: 'Read story about ' ~ title,
          ariaHidden: true,
          tabindex: -1
        } %}
			</div>
		</div>
	</a>
</article>
